{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo lcheck",
			"options": {
				"env": {
					"CARGO_ASC": "true",
					"CARGO_MSG_LIMIT": "1"
				},
			},
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"label": "cargo build"
		}
	]
}